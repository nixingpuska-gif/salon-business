# ===================================
# BEAUTY SALON SAAS - Environment Configuration
# ===================================

# Database (Local Docker by default; Supabase compatible)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/beauty_salon_saas?schema=public
DATABASE_DIRECT_URL=postgresql://postgres:postgres@localhost:5433/beauty_salon_saas?schema=public
# Supabase example (when switching to cloud)
# DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
# DATABASE_DIRECT_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Vault (encryption key used by vault functions)
VAULT_ENCRYPTION_KEY=your-vault-encryption-key

# Redis
REDIS_URL=redis://localhost:6380
REDIS_CLUSTER_ENABLED=false

# JWT Secret
JWT_SECRET=your-jwt-secret-change-in-production

# API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
NOVU_API_KEY=novu-...
CHATWOOT_API_KEY=chatwoot-...

# Telegram
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhooks/telegram

# WhatsApp (Meta Cloud API or 360Dialog)
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-verify-token

# Instagram
INSTAGRAM_ACCESS_TOKEN=your-access-token
INSTAGRAM_PAGE_ID=your-page-id

# VK
VK_ACCESS_TOKEN=your-vk-token
VK_GROUP_ID=your-group-id
VK_SECRET_KEY=your-secret-key

# MAX Messenger
MAX_BOT_TOKEN=your-max-token
MAX_API_URL=https://platform-api.max.ru

# Calendar Integrations
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/google/callback

# Payment Gateway (TBD)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Analytics
METABASE_EMBEDDING_SECRET=your-metabase-secret

# Monitoring
SENTRY_DSN=https://...@sentry.io/...

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Platform Settings
PLATFORM_NAME="Beauty Salon SaaS"
PLATFORM_DOMAIN=your-domain.com
SUPER_ADMIN_EMAIL=admin@your-domain.com

# Rate Limiting
RATE_LIMIT_CLIENT_MK_INTERVAL=3d
RATE_LIMIT_TENANT_TX_DAILY=3000
RATE_LIMIT_TENANT_MK_DAILY=1500
RATE_LIMIT_CHANNEL_TELEGRAM_RPS=30
RATE_LIMIT_CHANNEL_WHATSAPP_RPS=20
RATE_LIMIT_CHANNEL_MAX_RPS=30

# Feature Flags
FEATURE_VIP_PRIORITY=true
FEATURE_REFERRAL_PROGRAM=true
FEATURE_AI_VOICE_CALLS=false

# Node Environment
NODE_ENV=development
PORT=3000

# Laravel Backend
LARAVEL_APP_KEY=base64:...
LARAVEL_APP_URL=http://localhost:8000

# Python AI Orchestrator
PYTHON_ENV=development
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
