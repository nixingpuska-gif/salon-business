{
  "name": "sales_api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "backend/plugins/sales_api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "cache": true,
      "options": {
        "cwd": "backend/plugins/sales_api",
        "commands": [
          "pnpm build"
        ]
      },
      "dependsOn": [
        "^build",
        "build:packageJson"
      ]
    },
    "build:packageJson": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "backend/plugins/sales_api/dist/src/main.js",
        "tsConfig": "backend/plugins/sales_api/tsconfig.build.json",
        "outputPath": "backend/plugins/sales_api/dist",
        "updateBuildableProjectDepsInPackageJson": true,
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "typecheck",
        "build"
      ],
      "options": {
        "cwd": "backend/plugins/sales_api",
        "command": "node dist/src/main.js",
        "env": {
          "NODE_ENV": "development"
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "backend/plugins/sales_api",
        "command": "pnpm dev",
        "env": {
          "NODE_ENV": "development"
        }
      }
    },
    "docker-build": {
      "dependsOn": [
        "build"
      ],
      "command": "docker build -f backend/plugins/sales_api/Dockerfile . -t erxes/erxes-next-sales_api"
    }
  }
}
